<div class="w-9/12 mx-auto mt-2">
  <div class="ml-auto text-right">
   <span class="bg-blue-300 p-2 rounded">
    <% if current_user%>
      <%= link_to t('layouts.application.sign_out'), sign_out_path, method: :delete %>
    <%else%>
      <%= link_to t('layouts.application.sign_in'), sign_in_path %>
    <%end%>
  </span>
  </div>
  <% @articles.each do |article|%>
    <div class="p-2 my-2 cursor-pointer shadow">
      <h3 class="text-2xl rounded font-bold">
        <%= link_to article.title, article %>
      </h3>
      <p><%= article.content.body.to_plain_text[0..200]%>...<p>
    </div>
  <%end%>

  <div>
    <%= link_to 'New Article', new_article_path %>
  </div>
</div>